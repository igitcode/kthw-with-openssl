[ req ]
distinguished_name = req_distinguished_name
req_extensions         = v3_ca

[ req_distinguished_name ]
countryName                    = Country Name (2 letter code)
countryName_default            = US
countryName_min                = 2
countryName_max                = 2
stateName			= IL
stateName_default		= IL
localityName                   = Chicago
localityName_default		= Chicago
organizationName		= system:masters
organizationName_default	= system:masters
organizationalUnitName         = Kubernetes The Hard Way
organizationalUnitName_default = Kubernetes The Hard Way
commonName                     = admin
commonName_default		= admin
commonName_max                 = 64

[ v3_ca ]
basicConstraints=CA:false
keyUsage=digitalSignature,keyEncipherment
extendedKeyUsage=clientAuth
